<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/splash_bkg"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Confirm Payment?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/place"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Pay against:"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/PlaceName"
            android:text="Hello fast food"
            android:paddingLeft="10dp"
            android:textSize="17dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/owner"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Owners Name:"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/ownersName"
            android:text="hello"
            android:paddingLeft="10dp"
            android:textSize="17dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/amount"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="bottom"
            android:text="Amount:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/amountToPay"
            android:text="Rs.100"
            android:paddingLeft="10dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:padding="5dp"
            android:background="@drawable/confirm_cancel_dialog_btn"
            android:id="@+id/confirmBtn"
            android:text="Confirm"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:textSize="25dp"
            android:textColor="#f5c1c1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:padding="8dp"
            android:background="@drawable/confirm_cancel_dialog_btn"
            android:id="@+id/cancelBtn"
            android:text="Cancel"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:textColor="#f5c1c1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


</RelativeLayout>