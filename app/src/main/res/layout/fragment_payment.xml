<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/bkg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/name"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Payment Options"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/topUpBtn"
            android:rotation="90"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_account_balance_wallet_black_24dp"
            android:layout_width="35dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:id="@+id/headerView"
        android:layout_below="@+id/header"
        android:background="#e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:id="@+id/payNFC"
        android:background="@drawable/payment_option_btn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/NFCIMAGE"
            android:layout_margin="5dp"
            android:src="@drawable/ic_nfc_black_24dp"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <TextView
            android:textStyle="bold"
            android:layout_toRightOf="@+id/NFCIMAGE"
            android:layout_margin="18dp"
            android:layout_gravity="center"
            android:text="Pay via NFC"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/payQR"
        android:background="@drawable/payment_option_btn"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/QRIMAGE"
            android:layout_margin="5dp"
            android:src="@mipmap/qr"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_toRightOf="@+id/QRIMAGE"
            android:layout_margin="18dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Pay via QR SCAN"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

    </RelativeLayout>

</LinearLayout>