<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/splash_bkg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/userDesc"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="120dp" >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/userPicture"
        android:src="@mipmap/bus"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_toRightOf="@+id/userPicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:text="Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:textColor="#a1ffffff"
            android:textStyle="italic"
            android:text="email@gmail.com"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/seperation1"
        android:background="#e1e1e1"
        android:layout_below="@+id/userDesc"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

    <LinearLayout
        android:id="@+id/setting1"
        android:orientation="vertical"
        android:layout_below="@+id/seperation1"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="220dp" >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_notifications_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="Notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_library_books_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="Notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_security_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="Permission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_settings_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="Settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        </LinearLayout>

    <View
        android:id="@+id/seperation2"
        android:background="#e1e1e1"
        android:layout_below="@+id/setting1"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>


    <LinearLayout
        android:id="@+id/setting2"
        android:orientation="vertical"
        android:layout_below="@+id/seperation2"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp" >

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_help_outline_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="serif-monospace"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="Help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_event_note_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="Policies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_language_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="Language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

</LinearLayout>
    </LinearLayout>

    <View
        android:background="#e1e1e1"
        android:id="@+id/seperation3"
        android:layout_below="@+id/setting2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:fontFamily="serif"
        android:textColor="#7e7a7a"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:text="Version 1.0.0"
        android:layout_below="@+id/setting2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>