<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/splash_bkg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/name"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Bideshi Sawari"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/logOutBtn"
            android:rotation="-90"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_logout_black_24dp"
            android:layout_width="35dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:id="@+id/headerView"
        android:layout_below="@+id/header"
        android:background="#e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <EditText
        android:gravity="center"
        android:hint="Search for anything..."
        android:textColor="#000"
        android:textStyle="normal"
        android:textColorHint="#585757"
        android:singleLine="true"
        android:maxLines="1"
        android:drawableLeft="@drawable/ic_search_for_black_24dp"
        android:background="@drawable/search_layout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

    </EditText>



        <LinearLayout
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:src="@mipmap/places_icon"
                    android:layout_margin="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:gravity="center"
                    android:text="Places"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:src="@mipmap/resturant_icon"
                    android:layout_margin="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:gravity="center"
                    android:text="Resturants"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:src="@mipmap/park_icon"
                    android:layout_margin="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:gravity="center"
                    android:text="Parks"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:src="@mipmap/parking_logo"
                    android:layout_margin="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:gravity="center"
                    android:text="Parking"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    <View
        android:background="#e1e1e1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>


</LinearLayout>